<!DOCTYPE html>
<html ng-app="commikerApp">
  <head>
    <title>Commiker</title>
    <meta name="viewport" content="width=device-width">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" type="text/css" >
    <link href="/css/site.css" rel="stylesheet" type="text/css" >
    <link href="/css/styles.css" rel="stylesheet" type="text/css" >
    <link href="/css/angular-datepicker.css" rel="stylesheet" type="text/css" >
    <%= partial :'/shared/head_scripts' %>
    <%= partial :'/shared/angular_manifest' %>
  </head>
  <body>

  <base href="/">
    <!-- <br /> -->
    <div id="container">
      <div id="header">
        <nav class="navbar navbar-inverse navbar-fixed-top">
          <div id="navbar" class="navbar-collapse collapse contain">
            <div class="navbar-header">
              <a class="navbar-brand" ui-sref="home">Commiker</a>
            </div>
            <div class="nav navbar-nav navbar-right" style="padding: 13px 40px 0 0">
              <% if current_session_user.blank? %>
                <a
                class="log_in_txt"
                href='/login'
                target="_self">
                  <span>
                    Log in with slack
                  </span>
                  <img class="log_in_img" src="/img/slack.png" width="15px;">
                </a>
              <% end %>

              <% if !current_session_user.blank? %>
                <a class="log_in_txt" href='/logout' target="_self" style="padding-right: 10px"><%= current_session_user.slack_handler %>
                  &nbsp;&nbsp;
                  <img class="log_in_img" src="/img/logout.svg" width="13px">
                </a>
              <% end %>
            </div>
          </div>  

          <!--
              <% if !current_session_user.blank? %>
              <ul class="nav navbar-nav">
                <li>
                  <a ui-sref="sprints">Sprints</a>
                </li>
              </ul>
              <% end %>
          -->

        </nav>
      </div>

      <div id="top"></div>
      
      <%= yield %>
    
    </div><!--CONTAINER-->
    <%= partial :'/shared/footer_scripts' %>
  </body>
</html>

